doctype xml
rss(xmlns:atom="http://www.w3.org/2005/Atom", version="2.0")
  channel
    title= site.siteTitle
    description= site.siteDescription
    link= site.siteBaseUrl
    lastBuildDate= updated
    atom:link(rel="alternate", type="text/html", href="#{site.siteBaseUrl}")
    atom:link(rel="self", type="application/atom+xml", href="#{site.siteBaseUrl}feed/ubuntu")
    generator meepmeep
    - each post in posts
      item
        title= post.title
        link #{site.siteBaseUrl}#{post.path}
        atom:link(rel="self", href="#{site.siteBaseUrl}#{post.path}")
        pubDate= post.datexml
        guid(isPermaLink="false")= post.path
        atom:author
         name Adam Stokes
         uri= site.siteBaseUrl
        description <![CDATA[!{post.html}]]>
