{
  "source": "/home/adam/Dropbox/Articles",
  "metadata": {
    "title": "Adam Stokes",
    "description": "inmyrari"
  },
  "clean": false,
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-layouts": {
      "engine": "jade",
      "directory": "./templates"
    },
    "metalsmith-changed": {
        "extnames": {
        ".md": ".html"
        }
    },
    "metalsmith-pagination": {
        "collections.articles": {
            "perPage": 5,
            "template": "index.jade",
            "first": "index.html",
            "path": "page/:num/index.html",
            "filter": "private !== true",
            "pageMetadata": {
                "title": "Archive"
            }
        }
    },
    "metalsmith-collections": {
        "articles": {
            "sortBy": "date",
            "reverse": true,
            "pattern": "*.md"
        }
    }
  }
}
